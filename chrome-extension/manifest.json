{
  "manifest_version": 3,
  "name": "AI Recording Assistant Extension",
  "version": "1.0",
  "description": "Chrome extension for interacting with the AI Recording Assistant.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "http://localhost:3033/*",
    "audioCapture",
    "microphone",
    "tabCapture",
    "sidePanel"
  ],
  "action": {
    "default_icon": {
      "16": "images/logo.png",
      "48": "images/logo.png",
      "128": "images/logo.png"
    }
  },
  "icons": {
    "16": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["http://localhost:3033/*"]
}
